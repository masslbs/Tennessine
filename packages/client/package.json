{
  "name": "@massmarket/client",
  "dependencies": {
    "@massmarket/client": "link:",
    "@massmarket/contracts": "workspace:*",
    "abitype": "^1.0.1",
    "buffer": "^6.0.3",
    "isows": "^1.0.3",
    "long": "^5.2.3",
    "protobufjs": "^7.2.6",
    "viem": "^2.8.18"
  },
  "devDependencies": {
    "@massmarket/tsconfig": "workspace:*",
    "@types/node": "^20.11.19",
    "@types/tape": "^5.6.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/browser": "^1.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "memfs": "^4.7.7",
    "playwright": "1.40.0",
    "prettier": "^3.2.5",
    "protobufjs-cli": "^1.1.2",
    "tape": "^5.7.5",
    "vite": "^5.1.5",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vitest": "^1.3.1"
  },
  "scripts": {
    "test": "vitest",
    "test:chromium": "vitest --browser=chromium",
    "pbjs-build": "pnpm exec pbjs -t static-module -w ./wrapper.js  -r market.mass -o ./lib/protobuf/compiled.js $NETWORK_SCHEMA_PATH/*.proto --dependency protobufjs/minimal.js",
    "pbts-build": "pbts -r market.mass -o ./lib/protobuf/compiled.d.ts ./lib/protobuf/compiled.js",
    "pb-build": "pnpm pbjs-build && pnpm pbts-build",
    "lint": "eslint --ext .ts . && pnpm tsc"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./lib/protobuf/compiled": {
      "default": "./lib/protobuf/compiled.js",
      "types": "./lib/protobuf/compiled.d.ts"
    }
  }
}
