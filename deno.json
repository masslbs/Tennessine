{
  "workspace": [
    "./packages/utils",
    "./packages/schema",
    "./packages/stateManager",
    "./packages/eventTree",
    "./packages/client",
    "./packages/contracts",
    "./packages/not-next",
    "./packages/blockchain"
  ],
  "lint": {
    "exclude": ["./packages/frontend"],
    "rules": {
      "exclude": ["no-slow-types"]
    }
  },
  "fmt": {
    "exclude": [
      "./packages/frontend",
      ".direnv",
      "node_modules",
      ".pre-commit-config.yaml"
    ]
  },
  "compilerOptions": {
    "noErrorTruncation": true,
    "lib": ["ES2020", "dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react",
    "jsxImportSourceTypes": "npm:@types/react"
  }
}
