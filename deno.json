  "compilerOptions": {
    "noErrorTruncation": true,
    "lib": ["ES2020", "dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  }
}
