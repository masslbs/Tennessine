{
  "workspace": [
    "./packages/utils",
    "./packages/schema",
    "./packages/eventTree",
    "./packages/contracts",
    "./packages/blockchain",
    "./packages/client",
    "./packages/merkle-dag-builder",
    "./packages/stateManager",
    "./packages/frontend",
    "./packages/mmr"
